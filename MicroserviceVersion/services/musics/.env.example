# Environment variables for Music Service (Development)
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DEV_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/music_app_musics_dev
DATABASE_URL=postgresql://user:password@localhost:5432/music_app_musics_prod

# Security
SECRET_KEY=dev-music-service-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Supabase Storage
SUPABASE_URL=https://your-supabase-project-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_BUCKET=musics

# Service URLs
USER_AUTH_SERVICE_URL=http://localhost:5001
CHAT_SERVICE_URL=http://localhost:5003

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=simple
SERVICE_NAME=musics
SERVICE_VERSION=1.0.0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000